<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true" />

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:fresco="http://schemas.android.com/tools"
            android:background="@color/colorTransparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@color/colorPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="horizontal">


                    <com.ankoma88.app.moviegrid.ui.views.AspectRatioLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="6dp"
                        tools:ignore="NestedWeights,RtlSymmetry">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            card_view:cardCornerRadius="4dp"
                            card_view:cardElevation="8dp"
                            card_view:cardUseCompatPadding="true">

                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/ivPoster"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                fresco:actualImageScaleType="focusCrop" />

                        </android.support.v7.widget.CardView>
                    </com.ankoma88.app.moviegrid.ui.views.AspectRatioLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="18dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_alignParentTop="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/score"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/movie_property_text_size"
                                fresco:ignore="NestedWeights" />

                            <TextView
                                android:id="@+id/tvScore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/movie_property_text_size"
                                android:textStyle="bold"
                                fresco:ignore="NestedWeights"
                                tools:text="8.2" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/rating"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/movie_property_text_size"
                                fresco:ignore="NestedWeights" />

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/movie_property_text_size"
                                android:textStyle="bold"
                                fresco:ignore="NestedWeights"
                                tools:text="R" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/release_date"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/movie_property_text_size"
                                fresco:ignore="NestedWeights" />

                            <TextView
                                android:id="@+id/tvReleaseDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/movie_property_text_size"
                                android:textStyle="bold"
                                fresco:ignore="NestedWeights"
                                tools:text="July, 17, 2015" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        tools:text="Ant-Man (2015)"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/movie_title_text_size"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="@color/colorDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        tools:text="Armed with a super .,sdmg.ksdfklgsdfl kgjaklsjgalksdjflkasdjflkajsdlkfjasdlkfasldkflaksdjflaksdjflkasjlfkjaslkfjaslkfjlkasJFLKajsflkajSLFKAJSLFJaskfjalksJFLKAjflkajsKLFDJASLKDJLASK"
                        android:textColor="@color/colorIcons"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="@color/colorDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="16dp"/>



                </LinearLayout>
            </LinearLayout>
        </ScrollView>

</FrameLayout>
